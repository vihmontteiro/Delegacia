<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes da Ocorrência</title>
</head>
<body>
    <%- include("../partials/cabecalho.ejs") %>

    <div class="container">
        <% if (ocorrencia != null) { %>
            <div>
                <b>Número:</b> <%= ocorrencia.numero %>
            </div>
            <div>
                <b>Descrição:</b> <%= ocorrencia.descricao %>
            </div>
            <div>
                <b>Data:</b> <%= new Date(ocorrencia.data).toLocaleDateString() %>
            </div>
            <div>
                <b>Local:</b> <%= ocorrencia.local %>
            </div>
        <% } else { %>
            <h2 style="color: red;">Ocorrência não encontrada!</h2>
        <% } %>

        <br>
        <a href="/ocorrencias" class="btn btn-primary">Voltar</a>
    </div>

    <%- include("../partials/rodape.ejs") %>
</body>
</html>

